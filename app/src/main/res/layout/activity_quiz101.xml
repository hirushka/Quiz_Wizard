<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz101"
    android:background="@color/white"
    android:padding="5dp">


    <TextView
        android:id="@+id/qno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="m%Yak wxl    1/x"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="346dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:gravity="center"
        android:text="This will be question"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:gravity="center"
        android:layout_below="@+id/qno"
        android:text=",l=Kq  "
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="45dp">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="option 1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="option 2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="option 3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="option 4"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnconfirm"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="ikd; lrkak"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="bosrshg hkak"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/thumbsup"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/question"
        android:layout_below="@+id/btnnext"
        android:layout_marginTop="-46dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:visibility="gone"
        android:layout_alignRight="@+id/question" />

    <ImageView
        android:id="@+id/thumbsdown"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/question"
        android:layout_below="@+id/btnnext"
        android:layout_marginTop="-46dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_thumb_down_black_24dp"
        android:visibility="gone"
        android:layout_alignRight="@+id/question" />

</RelativeLayout>
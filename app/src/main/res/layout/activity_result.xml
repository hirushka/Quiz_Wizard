<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/white"
    android:padding="5dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="m%;sM,h"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/highscore" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="10/12"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="Wmrsu ,l=K"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/highscore"
        android:text="100"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="sample text"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/highscore"
        android:textSize="25dp"
        android:layout_marginTop="120dp"/>


    <Button
        android:id="@+id/btnreturn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="bosrshg hkak"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/reviewimg1"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_below="@+id/review"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:visibility="gone"/>

    <ImageView
    android:id="@+id/reviewimg2"
    android:layout_width="48dp"
    android:layout_height="41dp"
    android:layout_below="@+id/review"
    android:layout_centerHorizontal="true"
    android:foregroundGravity="center"
    android:src="@drawable/ic_sentiment_neutral_black_24dp"
    android:visibility="gone"/>

    <ImageView
        android:id="@+id/reviewimg3"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_below="@+id/review"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:src="@drawable/ic_sentiment_satisfied_black_24dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/reviewimg4"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_below="@+id/review"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
        android:visibility="gone"/>

</RelativeLayout>